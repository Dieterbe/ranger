" ===================================================================
" == Settings
" ===================================================================
set preview_script = %confdir/scope.sh
set use_preview_script = true
set file_launcher = vim
set column_ratios = 1, 1, 4, 3
set colorscheme = default

" ===================================================================
" == Definitions
" ===================================================================
let editor = vim
let pager = less

" ===================================================================
" == Browser Keybindings
" ===================================================================
map Q quit
map H history -1
map L history 1

map t tag toggle
map T tag remove

map <Space> mark toggle
map v mark toggle all
map V mark unmark all
map uv mark unmark all
map <C-V><dir> mark_in_direction
map u<C-V><dir> mark_in_direction unmark

map dy cut selection
map da cut selection add
map dr cut selection remove
map dd cut
map dj cut down
map dk cut up
map dgg cut home
map dG cut end
map d<bg> hint
map dg<bg> hint

map yy copy selection
map ya copy selection add
map yr copy selection remove
map yd copy
map yj copy down
map yk copy up
map ygg copy home
map yG copy end
map y<bg> hint
map yg<bg> hint

map i shell cat %s | %pager
map E shell %editor %s

map ? help

" Console
map : console
map ; console
map ! console shell 
map @ console -p6 shell  %%s
map # console shell -p
map r console open_with 
map / console search 

map f console find 
map cw console rename 
map cd console cd 

map A eval_macros console rename %ff
map I eval_macros console -p7 rename %ff

" Goto
map gh cd ~
map ge cd /etc
map gu cd /usr
map gd cd /dev
map gl cd -r .
map gL cd -r %f
map go cd /opt
map gv cd /var
map gm cd /media
map gM cd /mnt
map gs cd /srv
map gR cd %rangerdir
map g<bg> hint

map '<bg> hint bookmarks
map `<bg> hint bookmarks
map m<bg> hint bookmarks
map um<bg> chain hint bookmarks | hint text delete which bookmark?
map u<bg> hint
map m<any> set_bookmark $1
map um<any> unset_bookmark $1
map `<any> enter_bookmark $1
map '<any> enter_bookmark $1

" Cycling
map n next
map N previous

map ct next tag
map cc next ctime
map cm next mimetype
map cs next size
map c<bg> hint

" Settings
map z<bg> hint
"map z<bg> hint [*cdfhimpPsv*] show_*h*idden *p*review_files *P*review_dirs *f*ilter flush*i*nput *m*ouse
map zc toggle collapse_preview
map zd toggle sort_directories_first
map zf console filter 
map zh toggle show_hidden
map <C-h> toggle show_hidden
map <backspace> toggle show_hidden
map zi toggle flushinput
map zm toggle mouse_enabled
map zp toggle preview_files
map zP toggle preview_directories
map zs toggle sort_case_insensitive
map zv toggle use_preview_script

" VIM
map j move down
map k move up
map h move left
map l execute
map J move down 0.5 pages
map K move up 0.5 pages
map <C-D> move down 0.5 pages
map <C-U> move up 0.5 pages
map <C-F> move down 1 pages
map <C-B> move up 1 pages
map <PAGEDOWN> move down 1 pages
map <PAGEUP> move up 1 pages
map ] move_in_column -1 down
map [ move_in_column -1 up
map <CR> execute
map gg move home
map G move end
map ZZ quit
map ZQ quit
map Z<bg> hint

" Midnight Commander
map <F1> help
map <F3> view
map <F4> edit
map <F5> copy selection
map <F6> cut selection
map <F7> console mkdir 
map <F8> console delete seriously? 
map <F10> quit

" ===================================================================
" == Console Keybindings
" ===================================================================
cmap <UP> console_history -1
cmap <DOWN> console_history 1
cmap <LEFT> console_move left
cmap <RIGHT> console_move right
cmap <HOME> console_move home
cmap <END> console_move end

cmap <CR> console_execute
cmap <ESC> console_close
cmap <C-c> console_close

cmap <TAB> console_tab
cmap <S-TAB> console_tab -1

" Emacs
cmap <C-B> console_move left
cmap <C-F> console_move right
cmap <C-A> console_move home
cmap <C-E> console_move end
cmap <C-D> console_delete here
cmap <C-H> console_delete left
cmap <C-P> console_history -1
cmap <C-N> console_history 1

" Line editing
cmap <backspace> console_delete here
cmap <delete> console_delete left
cmap <C-W> console_delete_word
cmap <C-K> console_delete_rest 1
cmap <C-U> console_delete_rest -1
cmap <C-Y> console_paste

" Typing numbers
" Without this, numbers are treated as quantifiers for the following
" command, like 3j = go down 3 times
cmap 0 console_type 0
cmap 1 console_type 1
cmap 2 console_type 2
cmap 3 console_type 3
cmap 4 console_type 4
cmap 5 console_type 5
cmap 6 console_type 6
cmap 7 console_type 7
cmap 8 console_type 8
cmap 9 console_type 9

" vim: ft=vim
